<div class="center">
  <div class="loader" ng-if="management.loaded == false"><md-icon style="margin-top: 150px;width:100px;height:100px; color:#e49c36!important;" class="s48" md-svg-src="img/loader.svg"></md-icon></div>
  <div class="management" ng-if="management.loaded == true">

    <md-card>
      <!--<md-content>-->
        <div class="management__list" layout="column" layout-align="start center">

        <div layout="row" class="margin-top">

          <div>
            <div class="management__car-lp"></div>
            <div ng-repeat="i in getNumber(management.daysInMonth) track by $index"
              class="management__brick-lp " ng-click="addToRegistry($index, car)" layout="column" ng-bind="$index+1">
            </div>
          </div>

          <div ng-repeat="mArray in management.managementArray" >
            <div class="management__car-name md-accent">{{mArray.car_name}}{{mArray.seats_number}}</div>
            <div layout="column">
              <div class="management__brick" ng-repeat="day in mArray.days track by $index" ng-click="management.showDayDetails($event, day, mArray.car_id)"  ng-class="[day.reg_id == null ? 'free' : 'busy', $index%2 == 0 && day.reg_id == null ? 'row--odd' : 'null']">
                <div layout="column" layout-align="space-around center" style="height: 100%;">
                  <div >{{day.info}}</div>
                  <div class="who_add">{{day.account}}</div>
                </div>
              </div>
            </div>
          </div>
        </div>

        </div>
      <!--</md-content>-->
    </md-card>
  </div>

</div>

