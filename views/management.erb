<div class="center">
  <div class="loader" ng-if="management.loaded == false">
    <md-icon style="margin-top: 150px;width:100px;height:100px; color:#e49c36!important;" class="s48" md-svg-src="img/loader.svg"></md-icon></div>
  <div class="management" ng-if="management.loaded == true">

    <md-card>

      <div class="management__list" ng-style="{'height': managementHeight + 'px'}" scroll-stick layout="column" layout-align="start center">

        <div class="new-car-names-label-wrapper"
             layout="row">
          <div style="width:49px;height:70px;flex: none;"></div>
          <div class="new-car-names-label"
               ng-repeat="mArray in management.managementArray"
               ng-bind="::mArray.car_name"
               md-whiteframe="6"></div>
        </div>

        <div layout="row" class="margin-top">

          <div>
            <div ng-repeat="i in getNumber(management.daysInMonth) track by $index"
                 class="management__brick-lp " ng-click="addToRegistry($index, car)"
                 layout="column" md-whiteframe="2">
              <span >{{$index+1 < 10 ? '0'+ ($index+1) : $index+1}}</span>
              <span>{{dayName($index+1)}}</span>
            </div>
          </div>

          <div ng-repeat="mArray in management.managementArray" >
            <div layout="column">
              <div class="management__brick" md-whiteframe="1" ng-repeat="day in mArray.days track by $index"
                   ng-click="management.showDayDetails($event, day, mArray.car_id)"
                   ng-class="[day.reg_id == null ? 'free' : 'busy', $index%2 == 0 && day.reg_id == null ? 'row--odd' : 'null']">
                <div layout="column" layout-align="space-around center" style="height: 100%;">
                  <div >{{day.info}}</div>
                  <div class="who_add">{{day.account}}</div>
                </div>
              </div>
            </div>
          </div>
        </div>

        </div>
    </md-card>
  </div>

</div>

