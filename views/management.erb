<div class="center">

  <div class="management">

    <div class="users-list" layout="column" layout-align="start center">

      <!--{{management.registry}}-->
      <div>{{management.translateMonth[management.wholeDate.month]}}</div>
      <!--<div>{{management.daysInMonth}}</div>-->

     <div layout="row">
       <div class="management__car-name"></div>
       <div ng-repeat="i in getNumber(management.daysInMonth) track by $index" class="management__brick">
        <div flex>{{$index+1}}</div>
      </div>
     </div>

        <div ng-repeat="car in cars.cars">
          <div layout="row">
          <div class="management__car-name">{{car.name}}</div>
          <div ng-repeat="i in getNumber(management.daysInMonth) track by $index"
               class="management__brick" ng-click="addToRegistry($index, car)" >
               <div class="tak" ng-if="colorBricks(year, month, $index, car.id)">dd</div>
               <!--<div> </div>-->
          </div>
        </div>
      </div>
        <!--{{car}}-->
