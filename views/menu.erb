<md-toolbar>

  <div layout="row" layout-align="center center">

    <div ng-if="state.current.name === 'management'" style="position:absolute;margin: 5px 0 0 -440px;">
      <md-input-container>
        <md-select ng-model="management.selectedMonth" required ng-change="management.monthInfo()">
          <md-option value="{{$index}}" ng-repeat="month in management.translateMonth track by $index">{{month}}</md-option> <!-- todo dodac napis -->
        </md-select>
      </md-input-container>
    </div>

    <div ng-if="state.current.name === 'management'" style="position:absolute;margin: 5px 0 0 -300px;">
      <md-input-container>
        <md-select ng-model="management.selectedYear" required ng-change="management.monthInfo()">
          <md-option ng-value="year" ng-repeat="year in management.translateYears track by $index">{{year}}</md-option> <!-- todo dodac napis -->
        </md-select>
      </md-input-container>
    </div>

    <md-button
        class="md-button primary"
        ng-class="[ {true: 'bg-top-menu__button--selected'}[state.current.name === 'management'] ]"
        ng-click="goManagement()"
        aria-label="">
      Zarządzanie
    </md-button>

    <md-button
    class="md-button primary"
    ng-class="[ {true: 'bg-top-menu__button--selected'}[state.current.name === 'cars'] ]"
    ng-click="goCars()"
    aria-label="">
      Samochody
    </md-button>

    <md-button
    class="md-button primary"
    ng-class="[ {true: 'bg-top-menu__button--selected'}[state.current.name === 'users'] ]"
    ng-click="goUsers()"
    aria-label="">
      Użytkownicy
    </md-button>

    <md-button
    class="md-button primary"
    ng-click="goLogOut()"
    aria-label="">
      Wyloguj
    </md-button>

      <!--<md-button class="md-raised md-accent" ng-click="" aria-label="">Dodaj nowego użytkownika</md-button>  &lt;!&ndash; todo dodać napis !&ndash;&gt;-->

  </div>

</md-toolbar>